{
  "name": "hotmoka",
  "version": "1.0.0",
  "description": "A JavaScript/TypeScript client for Hotmoka",
  "main": "dist/hotmoka.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "types": "npx tsc --declaration --outDir dist/types --emitDeclarationOnly",
    "bundle": "npm run clean && npm run lint && npx webpack --mode production && npm run clean:dist",
    "bundle:all": "npm run clean && npm run bundle && npm run types && npm run clean:dist",
    "clean": "npx rimraf dist",
    "clean:dist": "npx rimraf dist/*.txt",
    "test:all": "mocha -r ts-node/register test/**/**.ts",
    "test:remoteNode": "mocha -r ts-node/register test/RemoteNode.test.ts",
    "test:marshallable": "mocha -r ts-node/register test/Marshallable.test.ts",
    "test:signedRequests": "mocha -r ts-node/register test/SignedRequests.test.ts"
  },
  "keywords": [
    "hotmoka",
    "client",
    "blockchain"
  ],
  "author": "Dinu Berinde",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "elliptic": "^6.5.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/elliptic": "^6.4.12",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "eslint": "^7.26.0",
    "mocha": "^8.4.0",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.37.1",
    "webpack-cli": "^4.7.0"
  }
}
